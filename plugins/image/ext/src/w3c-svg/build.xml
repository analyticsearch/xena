<?xml version="1.0"?>

<project name="w3c-svg" default="compile" basedir=".">

   <property name="builddir" value="classes" />
   <property name="srcdir" value="src" />
   

	<target name="clean" depends="">
		<delete dir="${builddir}" />
   	</target>
   
   	<target name="compile" depends="" description="">
	
	<!-- Make the build directory -->
	<mkdir dir="${builddir}" />        

      	<!-- compile W3C SVG -->
      	<javac srcdir="${srcdir}" 
	       destdir="${builddir}" 
	       debug="on"
	       verbose="on" />

  </target>

</project>
