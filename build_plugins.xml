<project name="digipres" default="xena_plugins" basedir=".">

	<property file="ant.properties"/>	
	
	<target name="xena_plugins">
		<ant dir="${archive_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${audio_dir}" antfile="build.xml" target="sendtoxena"/>
<!--		<ant dir="${basic_dir}" antfile="build.xml" target="sendtoxena"/> -->
		<ant dir="${csv_dir}" antfile="build.xml" target="sendtoxena"/>
<!--		<ant dir="${dataset_dir}" antfile="build.xml" target="sendtoxena"/> -->
		<ant dir="${email_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${html_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${image_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${multipage_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${naa_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${office_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${pdf_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${plaintext_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${project_dir}" antfile="build.xml" target="sendtoxena"/>
		<ant dir="${xml_dir}" antfile="build.xml" target="sendtoxena"/>
	</target>
	
	<target name="send_to_dpr" depends="xena_plugins">
		<copy todir="../dpr/plugins">
			<fileset dir="./dist/plugins" />
		</copy>

		<copy todir="../dpr/dist/plugins">
			<fileset dir="./dist/plugins" />
		</copy>
		
	</target>
	
	<target name="clean">
		<ant dir="${archive_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${audio_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${csv_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${email_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${html_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${image_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${multipage_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${naa_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${office_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${pdf_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${plaintext_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${project_dir}" antfile="build.xml" target="clean"/>
		<ant dir="${xml_dir}" antfile="build.xml" target="clean"/>
	</target>

</project>
